@using Blog.Domain.Models 
@model IList<BlogItem>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @for(int i = 0; i < Model.Count; i++)
    {
        <dl class="row">
            <dt class="col-sm-2">
                <a asp-controller="Post" asp-action="Index" asp-route-id="@Model[i].Title">@Html.DisplayFor(model => model[i].Title)</a>
            </dt>
        </dl>
    }
</div>
